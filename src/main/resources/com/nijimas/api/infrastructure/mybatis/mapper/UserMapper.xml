<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nijimas.api.infrastructure.mybatis.mapper.UserMapper">

    <insert id="insert" parameterType="com.nijimas.api.core.model.User">
        insert into "user" (uid, username, country_code)
        values (
        #{uid},
        #{username},
        #{countryCode}
        )
    </insert>

    <select id="findByUid" resultType="com.nijimas.api.core.model.User">
        select * from "user"
        where uid = #{uid}
    </select>

    <update id="update" parameterType="com.nijimas.api.core.model.User">
        update "user" set
        username = coalesce(#{username}, username),
        country_code = coalesce(#{countryCode}, country_code),
        self_intro = coalesce(#{selfIntro}, self_intro),
        profile_image_url = coalesce(#{profileImageUrl}, profile_image_url)
        where uid = #{uid}
    </update>
</mapper>